<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Atmosphere -->

	<MapGeneratorDef ParentName="SpaceMapGenerator">
		<defName>LAO_FloatingIsland</defName>
		<label>floating island</label>
		<genSteps>
			<li>LAO_FloatingIsland</li>
			<li>AsteroidBasicTransportPods</li>
			<li>AncientMiningCharge_Asteroid</li>
			<li>AncientExplosivesCrate_Asteroid</li>
			<li>AncientDrillPlatform_Asteroid</li>
			<li>AncientTuneller_Asteroid</li>
			<li>MechShipChunk_Asteroid</li>
			<li>RockChunks</li>
		</genSteps>
	</MapGeneratorDef>

	<GenStepDef>
		<defName>LAO_FloatingIsland</defName>
		<order>200</order>
		<genStep Class="LayeredAtmosphereOrbit.GenStep_FloatingIsland">
			<Radius>0.2</Radius>
			<numChunks>4~6</numChunks>
			<ruinsChance>0.1</ruinsChance>
			<archeanTreeChance>0.25</archeanTreeChance>
			<mineableCounts>
				<MineableGold>14~22</MineableGold>
				<MineableSilver>50~70</MineableSilver>
				<MineableSteel>80~110</MineableSteel>
				<MineableUranium>15~25</MineableUranium>
				<MineablePlasteel>12~15</MineablePlasteel>
				<MineableComponentsIndustrial>65~85</MineableComponentsIndustrial>
				<MineableJade>20~35</MineableJade>
			</mineableCounts>
		</genStep>
	</GenStepDef>
	
	<!-- High Orbit -->

	<MapGeneratorDef ParentName="SpaceMapGenerator">
		<defName>LAO_AsteroidPrecious</defName>
		<label>basic asteroid</label>
		<genSteps>
			<li>LAO_AsteroidPrecious</li>
			<li>AsteroidBasicTransportPods</li>
			<li>AncientMiningCharge_Asteroid</li>
			<li>AncientExplosivesCrate_Asteroid</li>
			<li>AncientDrillPlatform_Asteroid</li>
			<li>AncientTuneller_Asteroid</li>
			<li>MechShipChunk_Asteroid</li>
			<li>RockChunks</li>
		</genSteps>
	</MapGeneratorDef>

	<GenStepDef>
		<defName>LAO_AsteroidPrecious</defName>
		<order>200</order>
		<genStep Class="GenStep_BasicAsteroid">
			<numChunks>4~6</numChunks>
			<ruinsChance>0.1</ruinsChance>
			<archeanTreeChance>0.25</archeanTreeChance>
			<mineableCounts>
				<MineableGold>56~88</MineableGold>
				<MineableSilver>200~280</MineableSilver>
				<MineableSteel>320~440</MineableSteel>
				<MineableUranium>60~100</MineableUranium>
				<MineablePlasteel>48~60</MineablePlasteel>
				<MineableComponentsIndustrial>260~180</MineableComponentsIndustrial>
				<MineableJade>80~140</MineableJade>
			</mineableCounts>
		</genStep>
	</GenStepDef>
  
</Defs>