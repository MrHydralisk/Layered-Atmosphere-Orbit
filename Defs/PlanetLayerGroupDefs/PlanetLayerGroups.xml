	<LayeredAtmosphereOrbit.PlanetLayerGroupDef>
		<defName>LAO_Orbit</defName>
		<label>orbit</label>
		<description>Empty space a few hundred kilometers above the surface of the world. This is the region where satellites, spacecraft and asteroids orbit the planet. In this harsh vacuum, objects are exposed to a complete lack of oxygen and brutally low temperatures.</description>
		<defaultPlanetLayer>Orbit</defaultPlanetLayer>
		<planet>LAO_Rimworld</planet>
		<planetLayerGroupsDirectConnection>
			<li>LAO_Surface</li>
			<li>LAO_Atmosphere</li>
			<!-- <li>LAO_Surface_Moon</li> -->
		</planetLayerGroupsDirectConnection>
		<modExtensions>
			<li Class="LayeredAtmosphereOrbit.LayeredAtmosphereOrbitDefModExtension">
				<WhitelistArrivalFactionDef>
					<li>Mechanoid</li>
					<li>TradersGuild</li>
					<li>Salvagers</li>
					<li MayRequire="Ludeon.RimWorld.Royalty">Empire</li>
				</WhitelistArrivalFactionDef>
