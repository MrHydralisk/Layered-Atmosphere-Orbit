		<viewGizmoTexPath>UI/Commands/LAO_ViewLuna</viewGizmoTexPath>
		<defaultBiome>LAO_Luna</defaultBiome>
		<backgroundBiome>LAO_Luna</backgroundBiome>
		<worldGenSteps>
			<li>LAO_TerrainLuna</li>
			<li>Mutators</li>
			<li MayRequire="Ludeon.RimWorld.Odyssey">Landmarks</li>
			<!-- <li>AncientSites</li> -->
			<!-- <li>AncientRoads</li> -->
			<li>Factions</li>
			<li>Features</li>
		</worldGenSteps>
		<worldDrawLayers>
			<li>WorldDrawLayer_CurrentMapTile</li>
			<li>WorldDrawLayer_SelectedTile</li>
			<li>WorldDrawLayer_SettleTile</li>
			<li>WorldDrawLayer_MouseTile</li>
			<li>WorldDrawLayer_ClosestTile</li>
